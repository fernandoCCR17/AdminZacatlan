script(type='text/javascript').
    const carrusel = document.querySelectorAll(".carrusel-items");
    
    Array.prototype.slice.call(carrusel).forEach(function(element) {
        let intervalo = null, step = 1, maxScrollLeft = element.scrollWidth - element.clientWidth;
        const start = () => {
            intervalo = setInterval(function (params) {
                element.scrollLeft = element.scrollLeft + step;
                if(element.scrollLeft === maxScrollLeft){
                    step = -1   
                }else if(element.scrollLeft === 0){
                    step = step * -1   
                }
            }, 10)
        }

        const stop = () => {
            clearInterval(intervalo);
        }

        element.addEventListener("mouseover", () => {
            stop();
        })
        element.addEventListener("mouseout", () => {
            start();
        })

        start();
    })
